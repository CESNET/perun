				<prop key="perun.group.maxConcurentGroupsToSynchronize">10</prop>
				<prop key="perun.group.structure.maxConcurrentGroupsStructuresToSynchronize">10</prop>
				<prop key="perun.group.nameSecondaryRegex"/>
