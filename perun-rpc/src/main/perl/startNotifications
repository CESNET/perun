#!/usr/bin/perl

use strict;
use warnings;
use Getopt::Long qw(:config no_ignore_case);
use Perun::Agent;
use Perun::Common qw(printMessage);

sub help {
	return qq{
	Starts notifications
	------------------------------------
	Available options:
	--batch       | -b batch
	--help        | -h prints this help

	};
}

our $batch;
GetOptions ("help|h" => sub { print help(); exit 0;} ,"batch|b" => \$batch) || die help();

my $agent = Perun::Agent->new();
my $notificationsAgent= $agent->getNotificationsAgent;


$notificationsAgent->startNotifications();

printMessage("Notifications was started", $batch);
